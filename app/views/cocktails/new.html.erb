<!-- we need @cocktail, @ingredient, @dose in our `simple_form_for` -->
<div class="body">
  <h1>Fill in name and upload an image</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "add the cocktail"%>
  <% end %>
</div>
